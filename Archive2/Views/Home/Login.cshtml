    <main id="main">


        <section class="inner-page">
            <div class="container">
                <p>

                    <section class="vh-100">
                        <style>
                            body {
                                background-image: url('../login/img/uby-yanes-lx7g_nojyla-unsplash.jpg');
                                background-repeat: no-repeat;
                                background-attachment: fixed;
                                background-size: 100% 100%;
                            }
                        </style>
                        <div class="container py-0 h-80">
                            <div class="row d-flex justify-content-center align-items-center h-100">
                                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                                        <div class="card-body p-5 text-center">

                                            <h3 class="mb-5">Sign in</h3>

                                            <form method="post" asp-action="Login">
                                                <div class="form-outline mb-4">
                                                    <input type="email" id="typeEmailX-2" class="form-control form-control-lg a" placeholder="asd@gmail.com" name="email" />
                                                    <label class="form-label" for="typeEmailX-2">Email</label>
                                                </div>

                                                <div class="form-outline mb-4">
                                                    <input type="password" id="typePasswordX-2" class="form-control form-control-lg" placeholder="*****" name="password" />
                                                    <label class="form-label" for="typePasswordX-2">Password</label>
                                                </div>

                                                <!-- Checkbox -->
                                                <div class="form-check d-flex justify-content-start mb-4">
                                                    <input class="form-check-input" type="checkbox" id="loginAsAdmin" name="loginAsAdmin" />
                                                    <label class="form-check-label" for="loginAsAdmin"> Login as Admin </label>
                                                </div>

                                                <button type="submit" style="width:100px; height:50px; text-align: center;color:#4D4C46; background-color:#C6AB54; border-color: white; border-radius: 25px; color: white; padding: 10px 20px;">Login</button>

                                                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                                                {
                                                    <div class="alert alert-danger mt-3" role="alert">
                                                        @ViewBag.ErrorMessage
                                                    </div>
                                                }

                                            </form>

                                            <hr class="my-4">

                                            <script>
                                                // Get the checkbox element by its id
                                                var loginAsAdminCheckbox = document.getElementById('loginAsAdmin');
                                                // Add a click event listener to the label element associated with the checkbox
                                                document.querySelector('label[for="loginAsAdmin"]').addEventListener('click', function (event) {
                                                    // Prevent the default click behavior of the label
                                                    event.preventDefault();
                                                    // Toggle the checked state of the checkbox
                                                    loginAsAdminCheckbox.checked = !loginAsAdminCheckbox.checked;
                                                });
                                            </script>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
